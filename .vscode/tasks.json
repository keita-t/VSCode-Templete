{
  // ============================================================================
  // VS Code タスク設定
  // ============================================================================
  // テストを実行するタスクを定義します
  //
  // 【pytest】
  //   - Run Tests (pytest): pytest実行（デフォルト、高速）
  //   - Run Tests (Coverage): カバレッジ測定付き実行
  // ============================================================================
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Tests (pytest)",
      "type": "shell",
      "command": ".venv/bin/pytest tests/ -v",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Tests (Coverage)",
      "type": "shell",
      "command": ".venv/bin/pytest tests/ --cov=. --cov-report=term-missing",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
