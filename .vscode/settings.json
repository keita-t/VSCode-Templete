{
  // ============================================================================
  // VSCode-Templete プロジェクト設定
  // ============================================================================
  // --------------------------------------------------------------------------
  // エディタ基本設定
  // --------------------------------------------------------------------------
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  // --------------------------------------------------------------------------
  // ファイル管理
  // --------------------------------------------------------------------------
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },
  // --------------------------------------------------------------------------
  // BATS テスト設定
  // --------------------------------------------------------------------------
  "bats.testRunner.enable": true,
  "bats.testRunner.pattern": "test/**/*.bats",
  "bats.testRunner.watchFiles": [
    "**/*.bats",
    "**/*.sh"
  ],
  // --------------------------------------------------------------------------
  // シェルスクリプト設定
  // --------------------------------------------------------------------------
  "shellformat.flag": "-i 4 -ci -sr",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.tabSize": 4
  },
  "[bats]": {
    "editor.tabSize": 4
  },
  // --------------------------------------------------------------------------
  // テストエクスプローラ設定
  // --------------------------------------------------------------------------
  "testExplorer.useNativeTesting": true,
  "testing.automaticallyOpenPeekView": "failureInVisibleDocument",
  "testing.openTesting": "neverOpen",
  "testing.automaticallyOpenTestResults": "neverOpen"
}
